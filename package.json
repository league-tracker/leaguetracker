{
  "name": "leaguetracker",
  "version": "1.0.0",
  "description": "App that tracks the ELO rankings of players in a league",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=production node src/app.js",
    "test": "NODE_ENV=staging mocha test --recursive --exit",
    "test-coverage": "nyc npm test && nyc report --reporter=html && nyc check-coverage --statements 90 --branches 80 --functions 90 --lines 90",
    "test-coverage-browse": "npm run test-coverage; open coverage/index.html",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "debug": "NODE_ENV=development node --inspect src/app.js",
    "deploy": "gcloud app deploy",
    "browse": "gcloud app browse"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rwalle61/leaguetracker.git"
  },
  "author": "CForrest97 & rwalle61",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rwalle61/leaguetracker/issues"
  },
  "homepage": "https://github.com/rwalle61/leaguetracker#readme",
  "devDependencies": {
    "chai": "*",
    "chai-http": "^4.2.1",
    "chai-things": "^0.2.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha": "^5.3.0",
    "husky": "^1.3.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.10",
    "nyc": "^14.0.0",
    "openapi-schema-to-json-schema": "^2.2.0",
    "z-schema": "^4.0.2"
  },
  "dependencies": {
    "api-spec-converter": "^2.8.1",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "express-openapi-validate": "^0.4.4",
    "fs-extra": "^7.0.1",
    "js-yaml": "^3.13.1",
    "path": "^0.12.7",
    "swagger-ui-express": "^4.0.2",
    "yamljs": "^0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test-coverage"
    }
  }
}
